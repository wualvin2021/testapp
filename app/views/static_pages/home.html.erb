
<h2>Posts Checklist</h2>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= check_box_tag "post_#{post.id}" %>
      <%= post.content %> (Posted by: <%= post.user.username %>)
    </li>
  <% end %>
</ul>

<h2>User List</h2>
<ul>
  <% @users.each do |user| %>
    <li><%= user.first_name %> <%= user.last_name %> (Username: <%= user.username %>)</li>
  <% end %>
</ul>
